# Fluxbox bindings config
# vim: set ft=ruby:

# Aliases
Mod1 36 :Fullscreen
F4 :Exec scrot

# Enable mouse edge resizing
OnLeftGrip Move1 :StartResizing bottomleft
OnRightGrip Move1 :StartResizing bottomright

# click on the desktop to get menus
OnDesktop Mouse1 :HideMenus
OnDesktop Mouse2 :WorkspaceMenu
OnDesktop Mouse3 :RootMenu # used?

# alt + left click to move a window
OnWindow Mod1 Mouse1 :MacroCmd {Raise} {Focus} {StartMoving}
OnWindowBorder Move1 :StartMoving

# alt + right click to resize a window
OnWindow Mod1 Mouse3 :MacroCmd {Raise} {Focus} {StartResizing BottomRight}
OnWindowBorder Move3 :StartResizing

# left click on the titlebar to move the window
OnTitlebar Mouse1 :MacroCmd {Raise} {Focus} {ActivateTab}
OnTitlebar Move1  :StartMoving

# Alt Tab
Mod1 Tab :NextWindow {groups} (workspace=[current])
Mod1 Shift Tab :PrevWindow {groups} (workspace=[current])

XF86MonBrightnessUp :Exec xbacklight -inc 10
XF86MonBrightnessDown :Exec xbacklight -dec 10
XF86AudioMute :Exec ponymix toggle
XF86AudioLowerVolume :Exec ponymix decrease 5
XF86AudioRaiseVolume :Exec ponymix increase 5

Mod1 space :Exec toggle-xterm
Mod1 z :Exec wmctrl-switch-by-application
Mod1 Shift n :Exec xterm
Mod1 Shift p :Exec emacs
Mod1 Shift r :Restart
Mod1 Shift b :Exec google-chrome-stable
Mod1 Shift e :Exit

Mod1 Shift a :Exec fbrun
# current window commands
Mod1 F4 :Close
Mod1 F5 :Kill
Mod4 m :Minimize
Mod4 F10 :Maximize
Mod1 F11 :Fullscreen

#!/bin/bash -e

install_essential_packages() {
    join_by() { local IFS="$1"; shift; echo "$*"; }

    packages=(
    gvim
    emacs
    net-tools
    wget
    ttf-inconsolata
    ruby
    git
    xorg
    fluxbox
    )

    pacman --noconfirm -S $(join_by ' ' "${packages[@]}")

    git clone https://github.com/michaelbruce/tools $HOME/tools
    . $HOME/tools/install
}

# XXX not implemented
